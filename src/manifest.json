{
  "manifest_version": 3,
  "name": "PageNote",
  "version": "1.0.0",
  "description": "Friction-free note-taking directly inside any web page. Your notes resurface automatically on every visit.",
  
  "permissions": [
    "storage",
    "sidePanel"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "options_page": "dashboard.html",
  
  "action": {
    "default_title": "PageNote - Quick notes for this page"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle the side panel"
    }
  }
} 
